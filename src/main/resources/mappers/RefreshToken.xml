<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springjwt_maven.repository.RefreshTokenDao">

    <resultMap id="refreshEntityMap" type="com.example.springjwt_maven.entity.RefreshTokenEntity">
        <id property="id" column="token_id"/>
        <result property="userId" column="member_id"/>
        <result property="token" column="token"/>
        <result property="expiresAt" column="expires_at"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findByUserId" parameterType="int">
        SELECT
        token_id        AS tokenId,
        member_id        AS userId,
        token,
        expires_at     AS expiresAt
        created_at     AS createdAt
        FROM refresh_token
        WHERE member_id = #{userId}
    </select>

    <select id="findByToken" parameterType="String">
        SELECT
        token_id        AS tokenId,
        member_id        AS userId,
        token,
        expires_at     AS expiresAt
        created_at     AS createdAt
        FROM refresh_token
        where token = #{token}
    </select>

    <delete id="deleteByUserId" parameterType="int">
        delete from refresh_token
        where member_id = #{userId}
    </delete>

    <insert id="save" parameterType="com.example.springjwt_maven.entity.RefreshTokenEntity">
        insert into refresh_token
        values (id,#{userId},#{token})
    </insert>
<!--    <insert id="save" parameterType="RefreshTokenEntity">-->
<!--        insert into refresh_tokens-->
<!--        values (id,#{userId},#{token})-->
<!--    </insert>-->

    <insert id="insertRefreshToken" parameterType="map">
        INSERT INTO refresh_token (member_id, token, expires_at)
        VALUES (#{userId}, #{refreshToken}, #{expiresAt})
    </insert>
    
    <update id="update" parameterType="com.example.springjwt_maven.entity.RefreshTokenEntity">
        UPDATE refresh_token
        SET token = #{token}
        expires_at = #{expiresAt}
        WHERE member_id = #{userId}
    </update>
</mapper>